<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Password Create Form </title>
    <style type="text/css">
        form
        {
            background-color: beige;
            border : 2px solid black;
            border-radius: 5px;
            width: 400px;
            box-shadow: 10px 10px 5px lightblue;
        }

        label{
            font-weight: bolder;
        }
        h1
        {
            text-align: center;
            background-color:aliceblue;
            font-weight: bolder;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }
        td{
            padding: 10px;
        }

        #submit
        {
            border:3px solid black; 
            border-radius: 5px; font-size: 15px; 
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-weight: bold;
            box-shadow: 4px 4px 2px rgb(94, 88, 88); 
            width: 80px; 
            height: 40px;
        }

        #Password, #ConfPassword
        {
            box-shadow: 3px 3px 1.5px rgb(37, 34, 34);
        }

    </style>
    
</head>
    <script>
        function matchPassword() 
        {  
              //collect form data in JavaScript variables  
            var pw1 = document.getElementById("Password").value;  
            var pw2 = document.getElementById("ConfPassword").value;  

            //check empty password field  
           if(pw1 == "") {  
           document.getElementById("message1").innerHTML = "**Fill the Password please!";  
           return false;  
           }  
           else
           {
            document.getElementById("message1").innerHTML = "";
           }

           
           //check empty confirm password field  
           if(pw2 == "") {  
           document.getElementById("message2").innerHTML = "**Please Re-enter the Password !";  
           return false;  
           }   
           else
           {
            document.getElementById("message2").innerHTML = ""; 
           }
            if(pw1 === pw2)  
            {  
                alert("Password created successfully !!!"); 
                
                return true 
            } 
            else 
            {   
                alert("Passwords did not match"); 
                document.getElementById("message2").innerHTML = "** Passwords are not same";  
                return false
            } 
            // return false

        }  


    </script>
<body>
    <center>
        <br><br>
        <h1>Create Password Form</h1>
        <br><br>
    <form method="POST" id="pswdform" name="pswdform">
        <br><br>
        <table>
            <tr>
                <td><label for="Password">Password : </label></td>
                <td> <input type="password" name="Password" placeholder="Enter password" id="Password"></td>
                <span id = "message1" style="color:red"> </span>
            </tr>

            <tr>
                <td><label for="ConfPassword">Confirm Password : </label></td>
                <td><input type="password" name="ConfPassword" id="ConfPassword" placeholder="Re-enter your Password"></td>
                <span id = "message2" style="color:red"></span>
            </tr>
        </table>

        <br><br>
        <input type="submit" name="submit" id="submit" value="Submit" onclick="return matchPassword()">
        <br>
        <br>
    </form>
    </center>
</body>
</html>