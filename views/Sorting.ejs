<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sorting</title>
    <style>
        body
        {
            background-color: rgb(243, 217, 243);
        }
button
{
                    display: inline-block;
                    outline: 0;
                    border: 0;
                    cursor: pointer;
                    transition: box-shadow 0.15s ease,transform 0.15s ease;
                    will-change: box-shadow,transform;
                    background: #d3d3d6;
                    box-shadow: 0px 2px 4px rgb(45 35 66 / 40%), 0px 7px 13px -3px rgb(45 35 66 / 30%), inset 0px -3px 0px #d6d6e7;
                    height: 48px;
                    padding: 0 32px;
                    font-size: 18px;
                    border-radius: 6px;
                    color: black;
                    transition: box-shadow 0.15s ease,transform 0.15s ease;

}
                button:hover {
                    box-shadow: 0px 4px 8px rgb(45 35 66 / 40%), 0px 7px 13px -3px rgb(45 35 66 / 30%), inset 0px -3px 0px #c2c518;
                    transform: translateY(-2px);
                }
                button:active{
                    box-shadow: inset 0px 3px 7px #29bb72;
                    transform: translateY(2px);
                }
                
    </style>
</head>
<body>
<center>
    <h1>Array Sorting</h1>
    <br/>
    <label for="arr">Enter an Array to Sort : </label>
    <input type ="text" id ="arr" placeholder="Enter the elements by space">
    <br/><br/><br/>
    <button id="btn" onclick="sort()">Sort</button>
    <h4 id="dis"></h4>
</center>

    <script type="text/javascript">
        
        function sort()
        {
            let arr1 = document.getElementById("arr").value;
            let arr=arr1.split(" ");
            console.log(arr);
            // const arr = [84,2,42,5,1,77,90];
    
            let n =  arr.length;
            let temp = 0;
            for(let i=0;i<n;i++)
            {
                console.log("A["+i+"] ="+ arr[i]);
            }
    
            for(let i=0;i<n;i++)
            {
                for(let j=i+1;j<n;j++)
                {
                    if(arr[j]<arr[i])
                    {
                        temp=arr[i];
                        arr[i]=arr[j];
                        arr[j]=temp; 
                    }
                    console.log(arr);
                }
            }
    
            console.log("Array after Sorting\n");
            for(let i=0;i<n;i++)
            {
                console.log("A["+i+"] ="+ arr[i]);
                document.getElementById("dis").innerHTML = "Sorted Array : "+arr;
            }

        }
    </script>
</body>
</html>