<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registration Form </title>
    <style type="text/css">
    form
        {
            background-color: beige;
            border : 2px solid black;
            border-radius: 5px;
            width: 400px;
            box-shadow: 10px 10px 5px lightblue;
        }

        label{
            font-weight: bolder;
        }
        h1
        {
            text-align: center;
            background-color:aliceblue;
            font-weight: bolder;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }
        td{
            padding: 5px;
        }

        #submit
        {
            border:3px solid black; 
            border-radius: 5px; 
            font-size: 15px; 
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
            font-weight: bold;
            background-color: rgb(127, 220, 235);
            box-shadow: 4px 4px 2px rgb(94, 88, 88); 
            width: 80px; 
            height: 40px;
        }
        #Name, #Surname, #Email_ID
        {
            box-shadow: 3px 3px 1.5px rgb(37, 34, 34);
        }

        .lgin
        {
            /* display: inline-block; */
            display: block;
        }

    </style>
    
</head>
<script>
    function validateForm()
    {
        var v1 = document.getElementById("Name").value;
        var v2 = document.getElementById("Surname").value;
        var v3 = document.getElementById("Email_ID").value;

        if(v1 == "")
        {
            document.getElementById("msg1").innerHTML="Please Enter your Name !!";
            return false;
        }
        else
        {
            document.getElementById("msg1").innerHTML="";
        }
        if(v2 == "")
        {
            document.getElementById("msg2").innerHTML="Please Enter your Surname !!";
            return false;
        }
        else
        {
            document.getElementById("msg2").innerHTML="";
        }
        if(v3 == "")
        {
            document.getElementById("msg3").innerHTML="Please Enter your Email-ID !!";
            return false;
        }
        else
        {
            document.getElementById("msg3").innerHTML="";
        }
    }
</script>
<body>
    <center>
        <br><br><br>
        <h1>Registration Form</h1><br>
    <form method="POST" id="form" name="form">
        <br><br>    
        <table>
            <tr style="row-gap: 2px;">
                <td><label for="Name">Name &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp; : &nbsp;</label></td>
                <td><input type="text" name="Name" id="Name" placeholder="Enter your Name"></td>   
            </tr>
            <tr>
                <td colspan="2" id="msg1" style="color: red; text-align: center;" align="center;"></td>
            </tr>
            
            <tr>
                <td><label for="Surname">Surname &nbsp; : &nbsp;</label></td>
                <td><input type="text" name="Surname" id="Surname" placeholder="Enter your Surname"></td>
            </tr>
            <tr>
                <td colspan="2" id="msg2" style="color: red; text-align: center;" align="center;"></td>
           </tr>
            <tr>
                <td><label for="Email_ID">Email-ID &nbsp; : &nbsp;</label></td>
                <td><input type="text" name="Email_ID" id="Email_ID" placeholder="Enter you Email-ID"></td>
            </tr>
            <tr>
                <td colspan="2" id="msg3" style="color: red; text-align: center;" align="center;"></td>
           </tr>
           <!-- <tr>           
            <td></td>
            <td>
                 <center> 
                    <input type="submit" name="submit" id="submit" value="Submit" style="font-weight: bolder;">
               </center> 
            </td> 
           </tr> -->
        </table>
        <br>
            <input type="submit" name="submit" id="submit" value="Submit" onclick = "return validateForm()" style="font-weight: bolder;">
        <br><br>
        
        <div class="lgin">
            <p id="Already_registered">Already Registered?</p>
            <a href="http://localhost:4000/Login">Login</a>
        </div>
        <br>
    </form>
    </center>
    
</body>
</html>