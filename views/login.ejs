<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Login Form </title>
    <style>
        form
        {
            background-color: beige;
            border : 2px solid black;
            border-radius: 5px;
            width: 400px;
            box-shadow: 10px 10px 5px lightblue;
        }

        label{
            font-weight: bolder;
        }
        h1
        {
            text-align: center;
            background-color:aliceblue;
            font-weight: bolder;
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
        }
        td{
            padding: 5px;
        }

        #Email_ID, #Psw
        {
            box-shadow: 3px 3px 1.5px rgb(37, 34, 34);
        }
    </style>
</head>
<script>
    function validateForm()
    {
        var v1 = document.getElementById("Email_ID").value;
        var v2 = document.getElementById("Psw").value;

        if(v2 == "")
        {
            document.getElementById("msg2").innerHTML = "** Please Enter your Password !";
            return false;
        }
        else
        {
            document.getElementById("msg2").innerHTML = "";
        }
        if(v1 == "")
        {
            document.getElementById("msg1").innerHTML = "** Please Enter your Email-ID !";
            return false;
        }
        else
        {
            document.getElementById("msg1").innerHTML = "";
        }
    }
</script>
<body>
    <center>
        <br><br>
        <h1>Login Form</h1>
        <br>
    <form method="POST" id="form" name="form">
        <br><br>
        <label for="Email_ID">Email-ID  &nbsp; : &nbsp; </label>
        <input type="text" name="Email_ID" id="Email_ID" placeholder="Enter your Email-ID" tabindex="1">
        <br> <br>
        <span id="msg1" style="color: red;"></span>
<br>
        <label for="Psw">Password &nbsp; : &nbsp; </label>
        <input type="password" name="Psw" id="Psw" placeholder="Enter your Password" tabindex="2">
        <br> <br>
        <span id="msg2" style="color: red;"></span> 
<br>   
        <input type="submit" name="Login" id="Login" value="Login" onclick="return validateForm()" style="border:3px solid black; border-radius: 5px; font-size: 15px; font-family: Lucida Sans, Lucida Sans Regular, Lucida Grande, Lucida Sans Unicode, Geneva, Verdana, sans-serif; font-weight: bold; box-shadow: 4px 4px 2px rgb(94, 88, 88); width: 80px; height: 40px;" >
        <br><br>
    </form>
    </center>
        
</body>
</html> 